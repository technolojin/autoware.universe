<?xml version="1.0"?>
<launch>
  <arg name="node_name" default="lidar_centerpoint"/>
  <arg name="input/pointcloud" default="pointcloud"/>
  <arg name="output/objects" default="objects"/>

  <!-- parameter files -->
  <arg name="model_param_path" default="path/to/model_param.yaml"/>
  <arg name="ml_package_param_path" default="path/to/ml_package_param.yaml"/>
  <arg name="class_remapper_param_path" default="path/to/class_remapper_param.yaml"/>
  <!-- configuration -->
  <arg name="build_only" default="false" description="If true, the module will only build the model and exit."/>

  <node pkg="autoware_perception_dummy_nodes" exec="detector_a_node" name="$(var node_name)" output="screen">
    <!-- interface -->
    <remap from="~/input/pointcloud" to="$(var input/pointcloud)"/>
    <remap from="~/output/objects" to="$(var output/objects)"/>
    <!-- parameter -->
    <param from="$(var model_param_path)" allow_substs="true"/>
    <param from="$(var ml_package_param_path)" allow_substs="true"/>
    <param from="$(var class_remapper_param_path)"/>
    <!-- configuration -->
    <param name="build_only" value="$(var build_only)"/>
  </node>
</launch>
